<div class='container px-5 px-sm-0'>
<div class="row">
	<div class='col-md-3 sidebar_fixed'>

		<%= render 'users/profile', user: current_user %>
		<!--右側の指定を間違えるとエラー -->

		<!--<h2>New book</h2>-->
		<!--<= render 'books/newform', book: Book.new %>-->
		<%= render 'users/info', user: current_user %>
  </div>

<div class="col-xs-9">
<h2>ユーザー一覧</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>名前</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name %></td>
			<td><p><%= "フォロー数: #{user.follower.count}" %></p></td>
			<td><p><%= "フォワー数: #{user.followed.count}" %></p></td>
			<td>
				<p><% if current_user.following?(user) %>
				     <%= link_to "フォローを外す", unfollow_path(user.id), method: :post, class: "btn-sm btn-info" %>
					 <% else %>
					   <%= link_to "フォローする", follow_path(user.id), method: :post, class: "btn-sm btn-success" %>
					  <% end %></p>
			</td>
			<td><%= link_to "詳細", user, class: "btn-sm btn-warning user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--users一覧 -->
</div>
</div>

