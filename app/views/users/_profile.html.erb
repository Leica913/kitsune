<table class="table">

		<tr>
			<th><h4><%= user.name %>さん</h4></th>
		</tr>

			<th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></th>

		<tr>
			<!--<th>自己紹介文</th>-->
			<!--<th><= user.introduction %></th>-->
		</tr>
		<tr>
			<th><%= link_to "フォロー中", followings_path(user_id: user.id) %></th>
			<th><%= user.follower.count %></th>
		</tr>
		<tr>
			<th><%= link_to "フォロワー", followings_path(user_id: user.id) %></th>
			<th><%= user.followed.count %></th>
		</tr>
</table>

<% if user == current_user %>
<div class="row">
	<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>
<% else %>
<div class="row">
	<% if current_user.following?(user) %>
		<%= link_to "フォローを外す", unfollow_path(user.id), method: :post, class: "col-xs-6　col-xs-offset-3 btn btn-primary" %>
	<% else %>
    <%= link_to "フォローする", follow_path(user.id), method: :post, class: "col-xs-6 col-xs-offset-3 btn btn-success" %>
  <% end %>
</div>
<% end %>
