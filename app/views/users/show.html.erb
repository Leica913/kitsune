<div class='container '>
<div class="row">
	<div class='col-md-3 sidebar_fixed'>

		<%= render 'users/profile', user: current_user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->

		<!--<h2>New book</h2>-->
		<!--<= render 'books/newform', book: @book %>-->

		<%= link_to "新規記事", new_book_path(@book), class: "col col-xs-offset-3 btn btn-info" %>
	</div>

<div class="col" style='margin-top: 5px;'>
	<tr>
		<th><h3><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
						<%= current_user.name %>さん</h3></th>
		</tr>

			<th></th>

		<tr>
			<th>自己紹介</th>
			<th><%= current_user.introduction %></th>
		</tr>

<div>
	<div class="col" style='margin-top: 50px;'>
		<h3><%= current_user.name %>さんの記事一覧</h3>
	<!--books一覧 -->
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>タイトル</th>
				<th>本文</th>
				<th colspan="3"></th>
			</tr>
		</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= link_to user_path(@user.id) do %>
				<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
				<% end %>
			</td>
			<td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
			<td><%= book.body %></td>
			<td><p><%= "コメント件数：#{book.book_comments.count}" %></p></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--books一覧 -->
</div>
</div>
</div>