<h2>ユーザー情報編集</h2>

<%= form_for(@user) do |f| %>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
	<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->

<div class="field col-3">
	<%= f.label :名前 %>
	<%= f.text_field :name, class: "form-control name" %>
</div>

<div class="field col-12">
	<%= f.label :画像 %>
	<%= f.attachment_field :profile_image, class: "user_image" %>
</div>

<div class="field col-12">
	<%= f.label :自己紹介 %>
	<%= f.text_area :introduction, class: "form-control introduction" %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>
<%= link_to "戻る", :back, class: "col-1 col-xs-offset-2 btn btn-success mb-2 text-white" %>