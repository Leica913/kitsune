      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>


<%= form_with model: @book, local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :本文 %>
    <%= f.text_area :body, class: 'form-control text-break book_body' %>
  </div>
  <div class="form-contents_tag">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, value: @book.tag_list.join(","), autocomplete: "tag", class: "tag-field", placeholder:'タグを入力してください' %>
  </div>
  <!--<div class="form-group">-->
  <!--  <= f.label :タグ %>-->
  <!--  <= f.text_field :tag_name, class: 'form-control book_tag_name' %>-->
  <!--</div>-->
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
